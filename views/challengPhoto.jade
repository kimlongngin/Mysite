                      .col-xs-2
                        input.form-control(type='text', placeholder='value' style="margin-left:-25px;" name="txtvalue")
                      .col-xs-2

                        input#selectedFile(type='file', style='display: none;' onchange="readURL(this,img1,image4name);" name="f4")

                        img(id="img1" name="img1" src="http://localhost:8080/images/HomePage/NoPhoto.gif" class="img-circle" style=" height: 35px;margin-left: -49px;width: 35px;" value="Hi")  

                        input(type='submit',onclick='CallFile("selectedFile")', value='Browse' class="btn btn-default" name="btf4")


                    br
                    .row
                      .col-xs-3
                        label  Gift2
                      .col-xs-5
                        select.form-control(name="optgift2")
                          option(disabled selected="selected") Choose a gift

                          - each doc in data
                            option(name=doc._id)=doc.description



                    br
                    .row
                      .col-xs-3
                        label  Advertisement
                      .col-xs-5
                        select.form-control(name="optphotsociety")
                          option(disabled selected="selected") Photo societe
                          - each doc in data
                            option(name=doc._id)=doc.description


                    br
                    .row
                      .col-xs-3
                        label  Description
                      .col-xs-5
                        textarea.form-control(rows="4" cols="50" name="txtdescrption")


                    br
                    .row
                      .col-xs-3
                        label  
                      .col-xs-5
                        label Prix total du challenge: 150 eurose

                    br
                    .row
                      .col-xs-3
                        label Choose DateTime
                    hr
                    br 
                    .row

                          div(style="margin-left:10px;margin-top:0px;width:97%; overflow:scroll;")
                         
                              table(class="table table-bordered" style="text-align:center;")

                                  thead(style="background-color:yellow;")
                                    tr(class="success" style="color:#563D7C;background-color:#f3f5f3;")
                                    - each cal in calendar
                                      th=cal.challenge_date.getDate()+"-"+(cal.challenge_date.getMonth()+1)
                                    tr(class="success" style="color:#563D7C;")
                                    - each cal in calendar
                                      th=cal.challenge_time
                                  tbody
                                      tr(style="height:58px !important;")
                                  
                                        - each cal in calendar
                                          td=cal.price
                                           label(name="lblprice"+i style="display:none;")=cal.price
                                           input(type='checkbox' value=cal._id name="chvalue"+i)
                                           

              - }   

              br 
              .row
                .col-xs-3
                  label  
                .col-xs-5
                  input(type="submit" class="btn btn-default" value="Cancel" name="btncancel")
                  input(type="submit" class="btn btn-default" value="Save" name="btnsave" style="margin-left:20px;")
                  input(type="submit" class="btn btn-default" value="Pay" name="btnpay" style="margin-left:20px;")
