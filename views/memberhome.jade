
// View : memberHome will happen while click on the Profile menu of memberspace
// controller: on challenge.js Routs on memberHome 
// Method     : View all cotent from database on the view of client's profile
// Action     : Create and edit profile

extends layout
  
block content
    
    div.menu
        ul
          li
              a(href="/home") 
                  img(src="http://localhost:8080/images/HomePage/home_0042_accueil.png")
          li
              a(href="#")
                  img(src="http://localhost:8080/images/HomePage/home_0039_presentation.png")
          li
              a(href="#")
                  img(src="http://localhost:8080/images/HomePage/home_0029_utilisateur.png")
          li
              a(href="#")
                  img(src="http://localhost:8080/images/HomePage/home_0026_Pro.png")
    
    div.memberContent

      div(class="navbar navbar-default" role="navigation").memberMenu
        include _memberMenu
        
      div.memberForm_profile_content
       div.memberForm_profile_title
          p(style="position:relative;padding-top:9px;") Company Information
       
       div.memberForm

        table(class="table")
          tr
            td(style="width:20%;text-align:right;") Name :
            - each data1 in data
             td(style="text-align:left;")=data1.name+" "+data1.surname

          tr(class="active")
            td(style="width:20%;text-align:right;") Address :
            - each data1 in data
             td(style="text-align:left;")=data1.address   
          tr
            td(style="width:20%;text-align:right;") Email :
            - each data1 in data
             td(style="text-align:left;")=data1.email
          tr(class="active")
            td(style="width:20%;text-align:right;") Phone :
            - each data1 in data
             td(style="text-align:left;")=data1.tel 

          tr
            td(style="width:20%;text-align:right;") Logo :
            - each data1 in data
             td(style="text-align:left;")
              img.img-thumbnail(src='data:image/svg+xml;base64,', style='width: 140px; height: 140px;', data-src='holder.js/140x140', alt='140x140')

      ul.gallery.clearfix(style="display:none;")
              
      ul(style="width: 180px !important").gallery.clearfix
        li   
          - each data1 in data     
            a(href='http://localhost:8080/profileEdit/?firstname='+data1.surname+'&'+'lastname='+data1.name+'&'+'email='+data1.email+'&'+'tel='+data1.tel, style="width: 180px") 
             p(style="background: none repeat scroll 0 0 #7C4E95;border: 1px solid #7C4E95;border-radius: 0;color: #FFFFFF;cursor: pointer;font-size: 1em;margin-top: 30px;padding: 10px 0;transition: all 0.3s ease 0s;width: 180px;text-align:center;font-size:20px;") Edit

