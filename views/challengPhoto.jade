    div.memberContent
    

      div(class="navbar navbar-default" role="navigation").memberMenu
        include _challengizMenu



      div(style="position:relative;width:100%;height:auto;border:1px solid gray;margin-left:0px;margin-bottom:20px;")  
        div(style="width:100%;background-color:#428BCA;height:40px;padding-top:5px;border-bottom:0px solid black;") 
          p(style="font-weight:bold;font-size:16px;margin-left:10px;color:white;") Cr'eez des Challenges 



        div(style="width:100%;height:auto;padding-top:5px;border-bottom:0px solid black;" ) 
          form(method="post" role="form" action="/challengPhoto")

              div(class="bs-example" style="border:0px solid black;width:100%;height:90px;")
                table(style="margin-top:20px;margin-left:20px;")
                  tr
                    td
                      label Numbre de chhalenge souhait'e ?
                    td 
                      select.form-control(name="txtnumberchalleng" id="txtnumber" style="margin-left:10px;" onchange="sendReport(this.value)")
                        option 
                        option 1
                        option 2
                        option 3
                        option 4
                        option 5
                        option 6
                    td 
                      a(href="/calendar" class="btn btn-default" style="margin-left:100px;") Calendar

              - n=number
              
              - for (var i=0;i<n;i++){ 

                div(class="highlight" style="position:relative;display:inline-block;border:0px solid black;width:100%;height:auto;")

                    .row
                      .col-xs-3
                        label  
                      .col-xs-8
                        label(style="font-size:20px;") 
                         h2 Challenge
                          span(style="font-size:25px;")=i+1

                    br
                    .row
                      .col-xs-3
                        label  Title
                      .col-xs-8
                        input.form-control(type='text', placeholder='Enter Title' name="txttitle")

                        
                    br    
                    .row
                      .col-xs-3
                        label  Question
                      .col-xs-5
                        input.form-control(type='text', placeholder='Enter Question' name="txtquestion")
                  

                    br
                    .row
                      .col-xs-3
                        label  Gift1
                      .col-xs-5
                        select.form-control(name="optgift1")
